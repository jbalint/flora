	!,
	show_rule_signature(Id,_DescrVarTerm,_Prefix,Mod,_Head,_Body,
			    _DefeatCond,_RuleList,_BridgeRule),
	(FL_RULE_ENABLER_UNION(Id,Mod) -> fail
