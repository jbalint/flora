is_disabled_rule(Id,Mod) :-
	flora_modularize_atom(FL_RULE_ENABLER,Mod,ModularEnabler),
	EnablerPred =.. [ModularEnabler,Id],
	show_rule_signature(Id,_DescrVarTerm,_Prefix,Mod,_Head,_Body,
