:- compiler_options([xpp_on]).

#include "flora_terms.flh"
#include "flora_tabling_methods.flh"

:- import
	flora_defined_udf_registry/6
   from flrregistry.
:- import
	flora_op_synonym/2
   from flrsynonym.
:- import call0/1 from machine.

/****************************************************************************
    UDFHILOGPREDICATENAME(+UDFTerm,+Arity,+Module,-ReturnValue) :-
    rule for HiLog UDFs 
****************************************************************************/
UDFHILOGPREDICATENAME(UDFTerm,Arity,Module,ReturnValue) :-
	%% No cuts anywhere in this clause!
	%% We do want the 2nd UDFHILOGPREDICATENAME/4 to fire!
	get_base_pred(UDFTerm,BaseName,BasePredicate),
	flora_defined_udf_registry(Module,BaseName,Arity,BasePredicate,_,CallCode),
	arg(1,CallCode,ReturnValue),
	call0(CallCode).

UDFHILOGPREDICATENAME(UDFTerm,_Arity,_Module,UDFTerm).


%% working version
get_base_pred(UDFTerm,BaseName,BasePredicate) :-
	(UDFTerm =.. [WRAP_HILOG,OpName|Args] -> IfHilog = true
	; UDFTerm =.. [OpName|Args],
	    IfHilog = fail
	),
	( flora_op_synonym(OpName,BaseName)
	; BaseName = OpName
	),
	(IfHilog -> BasePredicate =.. [WRAP_HILOG,BaseName|Args]
	; BasePredicate =.. [BaseName|Args]
	).
