:- compiler_options([xpp_on]).

#include "flora_terms.flh"

%% Possible
FLLIBHYPOTHETICAL(FL_POSSIBLE,Call)  :-
	findall(Call,Call,Result),
	'_$_flora_one_by_one'(Call,Result).

%% Impossible
FLLIBHYPOTHETICAL(FL_IMPOSSIBLE,Call) :- findall(Call,Call,Result), Result = [].

'_$_flora_one_by_one'(_Call,[]) :- !, fail.
'_$_flora_one_by_one'(Call,[H|_]) :-
	Call=H.
'_$_flora_one_by_one'(Call,[_|Rest]) :-
	'_$_flora_one_by_one'(Call,Rest).
