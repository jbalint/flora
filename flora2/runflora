#! /bin/sh

if [ "`basename $0`" = runergo ] ; then
    flrshell=ergo_shell
else
    flrshell=flora_shell
fi

if test "$1" = "--devel"; then
    STARTUPOPTIONS=""
    shift
else
    STARTUPOPTIONS="--noprompt --quietload --nofeedback --nobanner"
fi

if test ! "$*" = ""; then
    extra_args="$*"
fi

thisdir=`dirname $0`
. $thisdir/.flora_paths

#PROLOGOPTIONS="-m 4000000 -c 12000000"
#PROLOGOPTIONS="-p -m 2000000 -c 50000"
#PROLOGOPTIONS="-p"
#PROFILING="xsb_profiling:profile_unindexed_calls(once)."

"$PROLOG" $STARTUPOPTIONS $PROLOGOPTIONS -e "$PROFILING asserta(library_directory($FLORADIR)). [flora2]. $flrshell." $extra_args
