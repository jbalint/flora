#include "db_test.flh"

?- _load(persistentmodules>>pm).

?- writeln('--Insert and delete stuff from all three modules, with and w/o db association--')@_plg().

?- writeln('Create module mod1 and associate with a DB')@_plg().
?- newmodule{mod1}.
?- mod1[%attach(DSN,'ext_db',USER_NAME,PWD)]@pm.

?- writeln('Get answers for : mod1')@_plg().
?- writeln('Answers: a,b,c,d')@_plg().
?- q(?X)@mod1.

?- writeln('Load modules mod1, mod2. NO database association.')@_plg().
?- [empty>>mod2].
?- [empty>>mod3].

?- writeln('Since NO db is associated, the queries should return no answers.....')@_plg().
?- q(?X)@mod2.
?- q(?X)@mod3.

?- writeln('Now associate mod2 with the database and ask a couple of queries.')@_plg().

?- mod2[%attach(DSN,'ext_db',USER_NAME,PWD)]@pm.

?- writeln('Unification will succeed. Returns a,b,c,d for the first query and p-a:a,b,c,d for the other')@_plg().
?- abolish_all_tables.
?- q(?W)@mod2.
?- ?X(?Y,?Z)@mod2.

?- writeln('Still no results for mod3.')@_plg().
?- q(?X)@mod3.
?- ?X(?Y,?Z)@mod3.
?- writeln('Two failures above, as expected.')@_plg().

?- writeln('Associate mod3 with the database.')@_plg().

?- mod3[%attach(DSN,'ext_db',USER_NAME,PWD)]@pm.

?- writeln('delete all q(X) terms from mod3')@_plg().
?- delete{q(a)@mod3,q(b)@mod3,q(c)@mod3,q(d)@mod3}.

?- writeln('delete all p(_,_) terms from mod2')@_plg().
?- writeln('test before deletion')@_plg,
	p(?X,?Y)@mod2.
?- delete{p(a,a)@mod2}.
?- delete{p(a,b)@mod2,p(a,c)@mod2,p(a,d)@mod2}.

?- writeln('Now re-run the sanity test (db_test2) to get a different set of results.')@_plg().
?- _halt.

