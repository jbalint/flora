#include "flora_wspredicates.flh"
#include "flora_porting.flh"

:- import flora_warning_line/2 from flrprint.
:- import flora_funct_arity/2 from flrwrapper.

#include "flrnoeqltrailer_neg.inc"

/***************************************************************************
  Note that all programs rules are translated with with a 'derived_' prefix.
  These rules are bridged to the trailer using wrapper predicates with a
  'inferred_' (FLTRAILERPREFIX) prefix.
***************************************************************************/


/***************************************************************************
  closure rules for X::Y
***************************************************************************/
:- import xwam_state/2 from machine.
%% X::X true if nonstrict subclasses
WRAP_SUB(X,X,_CallerInfo) :-
        flora_optimizer_registry(FLORA_NONSTRICT_SUBCLASSES,'FLORA_THIS_MODULE_NAME').

WRAP_SUB(X,Y,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_SUB)(X,Y,[Caller|_]),
	(X=Y,
	%% Issue a warning only if we are sure X::Y is true, not undefined
	xwam_state(2,XWamState), XWamState =:= 0,
 	\+flora_optimizer_registry(FLORA_NONSTRICT_SUBCLASSES,'FLORA_THIS_MODULE_NAME') ->
	    flora_warning_line('cycle in class hierarchy: ~w sub ~w', [X,Y])
	; true).

WRAP_SUB(X,Y,[Caller|_]) :-
	silent_sub(X,Z,[Caller|_]),
	FLTRAILERPREFIX(WRAP_SUB)(Z,Y,[Caller|_]),
	(X=Y,
	xwam_state(2,XWamState), XWamState =:= 0,
 	\+flora_optimizer_registry(FLORA_NONSTRICT_SUBCLASSES,'FLORA_THIS_MODULE_NAME') ->
	    flora_warning_line('cycle in class hierarchy: ~w sub ~w sub ~w',[X,Z,Y])
	; true).


/***************************************************************************
  closure rules for O:C
***************************************************************************/
%% WRAP_ISA/3
WRAP_ISA(O,C,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_ISA)(O,C,[Caller|_]).

WRAP_ISA(O,C,[Caller|_]) :-
        nonvar(C), var(O),
	!,
	silent_sub(S,C,[Caller|_]),
	FLTRAILERPREFIX(WRAP_ISA)(O,S,[Caller|_]).

WRAP_ISA(O,C,[Caller|_]) :-
	(
	    flora_optimizer_registry(FLORA_CLASS_EXPRESSIONS,'FLORA_THIS_MODULE_NAME')
	-> 
	    silent_sub(S,C,[Caller|_]),
	    FLTRAILERPREFIX(WRAP_ISA)(O,S,[Caller|_])
	;
	   %% The order of FLTRAILERPREFIX(WRAP_ISA)/silent_sub is important.
	   %% Otherwise, it won't return correct answers in cases
	   %% like a:(b,c). ?- a:?X.
	    FLTRAILERPREFIX(WRAP_ISA)(O,S,[Caller|_]),
	    silent_sub(S,C,[Caller|_])
	).


/*****************************************************************************
  closure for X[Y->Z], X[Y*->Z], X[Y->{}]
*****************************************************************************/
WRAP_IMVD(C,M,V,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_IMVD)(C,M,V,[Caller|_]).

WRAP_MVD(O,M,V,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_MVD)(O,M,V,[Caller|_]).

WRAP_MVDDEF(O,M,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_MVDDEF)(O,M,[Caller|_]).

WRAP_MVDDEF(O,M,[Caller|_]) :-
	nonvar(M),
	WRAP_MVD(O,M,_V,[Caller|_]).
	%% Should have a cut here when XSB will allow


/*****************************************************************************
  binary attributes (tabled methods)
*****************************************************************************/
WRAP_METH(O,M,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_METH)(O,M,[Caller|_]).

WRAP_IMETH(C,M,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_IMETH)(C,M,[Caller|_]).


/*****************************************************************************
  nontabled methods (transactions)
*****************************************************************************/
WRAP_TRAN(O,T,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_TRAN)(O,T,[Caller|_]).


/*****************************************************************************
  monotonic inheritance of signatures
*****************************************************************************/
%% WRAP_MVDSIG/4
WRAP_MVDSIG(O,M,R,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_MVDSIG)(O,M,R,[Caller|_]).

WRAP_MVDSIG(O,M,R,[Caller|_]) :-
	WRAP_ISA(O,C,[Caller|_]),
	WRAP_IMVDSIG(C,M,R,[Caller|_]).


%% WRAP_MVDCONDEF/5 
WRAP_MVDCONDEF(C,M,L,H,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_MVDCONDEF)(C,M,L,H,[Caller|_]).

WRAP_MVDCONDEF(O,M,L,H,[Caller|_]) :-
	WRAP_ISA(O,C,[Caller|_]),
	WRAP_IMVDCONDEF(C,M,L,H,[Caller|_]).

%% WRAP_MVDSIGDEF/3
WRAP_MVDSIGDEF(O,M,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_MVDSIGDEF)(O,M,[Caller|_]).

WRAP_MVDSIGDEF(O,M,[Caller|_]) :-
	WRAP_ISA(O,C,[Caller|_]),
	WRAP_IMVDSIGDEF(C,M,[Caller|_]).

WRAP_MVDSIGDEF(O,M,[Caller|_]) :-
	WRAP_MVDSIG(O,M,_V,[Caller|_]).
	%% Should have a cut here when XSB will allow


%% WRAP_IMVDSIG/4
WRAP_IMVDSIG(C,M,R,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_IMVDSIG)(C,M,R,[Caller|_]).

WRAP_IMVDSIG(C,M,R,[Caller|_]) :-
	FLINHERITANCEPREFIX(WRAP_SUB)(C,S,[Caller|_]),
	WRAP_IMVDSIG(S,M,R,[Caller|_]).


%% WRAP_IMVDCONDEF/5 
WRAP_IMVDCONDEF(C,M,L,H,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_IMVDCONDEF)(C,M,L,H,[Caller|_]).

WRAP_IMVDCONDEF(C,M,L,H,[Caller|_]) :-
	FLINHERITANCEPREFIX(WRAP_SUB)(C,S,[Caller|_]),
	WRAP_IMVDCONDEF(S,M,L,H,[Caller|_]).

%% WRAP_IMVDSIGDEF/3
WRAP_IMVDSIGDEF(C,M,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_IMVDSIGDEF)(C,M,[Caller|_]).

WRAP_IMVDSIGDEF(C,M,[Caller|_]) :-
	FLINHERITANCEPREFIX(WRAP_SUB)(C,S,[Caller|_]),
	WRAP_IMVDSIGDEF(S,M,[Caller|_]).

WRAP_IMVDSIGDEF(C,M,[Caller|_]) :-
	WRAP_IMVDSIG(C,M,_V,[Caller|_]).
	%% Should have a cut here when XSB will allow


%% WRAP_BOOLSIG/3
WRAP_BOOLSIG(O,M,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_BOOLSIG)(O,M,[Caller|_]).

WRAP_BOOLSIG(O,M,[Caller|_]) :-
	WRAP_ISA(O,C,[Caller|_]),
	WRAP_IBOOLSIG(C,M,[Caller|_]).


%% WRAP_IBOOLSIG/3
WRAP_IBOOLSIG(C,M,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_IBOOLSIG)(C,M,[Caller|_]).

WRAP_IBOOLSIG(C,M,[Caller|_]) :-
	FLINHERITANCEPREFIX(WRAP_SUB)(C,S,[Caller|_]),
	WRAP_IBOOLSIG(S,M,[Caller|_]).


%% WRAP_TRANSIG/3
WRAP_TRANSIG(O,M,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_TRANSIG)(O,M,[Caller|_]).

WRAP_TRANSIG(O,M,[Caller|_]) :-
	WRAP_ISA(O,C,[Caller|_]),
	WRAP_ITRANSIG(C,M,[Caller|_]).


%% WRAP_ITRANSIG/3
WRAP_ITRANSIG(C,M,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_ITRANSIG)(C,M,[Caller|_]).

WRAP_ITRANSIG(C,M,[Caller|_]) :-
	FLINHERITANCEPREFIX(WRAP_SUB)(C,S,[Caller|_]),
	WRAP_ITRANSIG(S,M,[Caller|_]).


/*****************************************************************************
  object existence
*****************************************************************************/
WRAP_EXISTS(X,[Caller|_]) :-
	FLTRAILERPREFIX(WRAP_EXISTS)(X,[Caller|_]).

