#include "standard.h"

%pretest :-
	[+test_func_facts>>foomod1],
	[+test_func_facts_aux>>foomod2].
%pretest2 :-
	[+test_func_facts],
	[+test_func_nested].

%test :- flora_set_maxerrors(30)@_plg(flrutils),
	flora_set_maxwarnings(50)@_plg(flrutils),
	file_reopen(temp,w,STDERR,?)@_plg(file_io),
	file_reopen(temp1,w,STDWARN,?)@_plg(file_io),
	(catch{%pretest,?,fail} ; true),
	(catch{%pretest2,?,fail} ; true),
	file_close(STDWARN)@_plg(file_io),
	file_close(STDERR)@_plg(file_io),
	open(file(temp1)@_plg,read,?Port1)@_plg,
	open(file(temp)@_plg,append,?Port2)@_plg,
	copyIOport(?Port1,?Port2)@_plg(file_io),
	close(?Port1)@_plg,
	close(?Port2)@_plg,
	flora_file_op(unlink,temp1)@_plg(flrporting).
