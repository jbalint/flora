udf father(?x) := ?y if father(?x,?y).
father(mary,tom).
father(tom,bob).
father(john,sam).
father(sam,alex).

grandfather(?z,?w):-father(father(?z),?w).

%test :- tell(temp)@\plg,
	 grandfather(mary,?y),
	 writeln(?y)@\plg,
	 writeln(father(mary))@\plg,
	 grandfather(john,?x),
	 writeln(?x)@\plg,
	 told@\plg.
