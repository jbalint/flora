?X[wife->joan] :- tom[wife->?Y],?Y[father->?X].
rose[father->carter].

%pretest :- ?X[?Y->?Z],
	%write(?X)@_io, %write(' ')@_io, %write(?Y)@_io,
	%write(' ')@_io, %writeln(?Z)@_io, fail.
%pretest :- true.

%test :- tell(temp)@_plg(), 
	Method[mustDefine(on)]@_sys,
	%pretest,
	Method[mustDefine(off)]@_sys,
	%pretest,
	told@_plg().


