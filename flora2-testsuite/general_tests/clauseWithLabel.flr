	?Res = collectset{?O| member(?id,[mm2,mm22,mm222])@_plg(basics),
	                      clause{@{qqq,?Y} @!{?id} ?P,?L},
	                      ?O = out(?Y,?P,?L)
                         },
	flora_write_goal_substitute_vars(?Res)@_plg(flrdecode), nl@_plg.
