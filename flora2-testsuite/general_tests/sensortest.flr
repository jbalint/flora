%pretest :- %test1, %test2, %test3, %test4, %test5, %test6, uritst@sensorsmod.

%test :- tell(temp)@_plg(),
        Method[%mustDefine(on)]@_sys,
        %pretest,
        Method[%mustDefine(off)]@_sys,
        %pretest,
        told@_plg().

