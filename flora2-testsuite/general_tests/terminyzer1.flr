@!{fact1} p(a).
@!{fact2} q(b).
@!{fact3} s(f1(b)).
@!{rule1} r(?X) :- r(?X).
@!{rule2} p(f1(?X)) :- q(?X).
@!{rule3} q(f2(?X)) :- p(?X).
@!{rule4} r(?X) :- p(?X), s(?X).

