:- compiler_options([xpp_on]).
#include "flora_terms.flh"

:- import
	show_rule_signature/9,
	matching_rule_signature/6,
	rule_signature_member/3
   from flrcanon.


FLLIBLABELPRIMITIVE(RL,HeadList) :-
	HeadList = [Head],
	matching_rule_signature(RL,_,Head,_,_,RuleSig),
	rule_signature_member(defeatcondition,RuleSig,DefeatCond),
	%%show_rule_signature(RL,_,_,Head,_,_,DefeatCond,_,_),
	DefeatCond \== NULL.

%% Can be used to obtain all known labels of defeasible rules.
%% FL_RULE_LABEL(-RL,+Mod)
FL_RULE_LABEL(RL,Mod) :-
	show_rule_signature(RL,_,Mod,_,_,_,DefeatCond,_,_),
	DefeatCond \== NULL.

/*  UNUSED: we can use clause{@{?RL} ?Head@?Mod, ?Body}
