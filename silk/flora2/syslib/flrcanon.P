matching_rule_signature(Id,VarsTerm,Prefix,Head,Body,(Id,VarsTerm,Prefix,Mod,Head,NewBody,DefeatCond,RuleList,BridgeRule)) :-
        var(Head),
        !,
        flora_rule_signature(Id,VarsTerm,Prefix,Mod,Head,NewBody,DefeatCond,RuleList,BridgeRule),
	FLLIBUNIVEQFORM(NewBody,Body).

matching_rule_signature(Id,VarsTerm,Prefix,FLLIBMODLIT(A1,A2,A3,A4),Body,(Id,VarsTerm,Prefix,Mod,NewHead,NewBody,DefeatCond,RuleList,BridgeRule)) :-
        !,
        flora_rule_signature(Id,VarsTerm,Prefix,Mod,NewHead,NewBody,DefeatCond,RuleList,BridgeRule),
        FLLIBUNIVEQFORM(NewHead,FLLIBMODLIT(A1,A2,A3,A4)),
	FLLIBUNIVEQFORM(NewBody,Body).

matching_rule_signature(Id,VarsTerm,Prefix,(H1,H2),Body,(Id,VarsTerm,Prefix,Mod,(NewH1,NewH2),NewBody,DefeatCond,(RL1,RL2),BridgeRule)) :-
        !,
        matching_rule_signature(Id,VarsTerm,Prefix,H1,Body,(Id,VarsTerm,Prefix,Mod,NewH1,NewBody,DefeatCond,RL1,BridgeRule)),
        matching_rule_signature(Id,VarsTerm,Prefix,H2,Body,(Id,VarsTerm,Prefix,Mod,NewH2,NewBody,RL2,BridgeRule)).

matching_rule_signature(Id,VarsTerm,Prefix,Head,Body,(Id,VarsTerm,Prefix,Mod,GHead,NewBody,DefeatCond,RuleList,BridgeRule)) :-
        convert_to_body_literal(Head,BHead),
        flora_rule_signature(Id,VarsTerm,Prefix,Mod,BHead,NewBody,DefeatCond,RuleList,BridgeRule),
        flora_generalize_last(BHead,GHead),
	FLLIBUNIVEQFORM(NewBody,Body).

