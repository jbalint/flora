/****************************************************************************
  coder_build_dynrulelist(+List,+DWS,?VarList,-Code,-IndexedCode,-Status)
****************************************************************************/
coder_build_dynrulelist([],_DWS,_VarList,[],[],[]) :- !.

coder_build_dynrulelist([Term|T],DWS,VarList,[Code|TCode],[CInd|TCInd],Status) :-
	%% Args to rule updates can be variables
	is_prvariable(Term,Name,Index),
	!,
	coder_build_variable(Name,VarList,Code),
	CInd = Index,
	coder_build_dynrulelist(T,DWS,VarList,TCode,TCInd,Status).

coder_build_dynrulelist([Term],DWS,VarList,Code,CInd,Status) :-
	is_prdynrule(Term,HeadList,Body,HVars,BVars,DelayChecker,(Id,Meta,DefeatCond)),
	!,
	is_prlist(HeadList,Head,_T,NO_INDEX),
	(Id == NULL -> Stat_Id = [], IdCode = NULL, IdCodeInd = (NULL,0)
	; flora_build_struct(Id,DWS,CODER_GENERIC_CONTEXT,VarList,IdCode,IdCodeInd,Stat_Id)),
	(Stat_Id == [] ->
	    %% don't use any prefix
	    coder_build_structlist(Head,DWS,CODER_GENERIC_CONTEXT,VarList,HCode,HICode,Status_Head),
	    ( Status_Head == [] ->
		flora_build_struct(Body,DWS,CODER_BODY_CONTEXT,VarList,BCode,BICode,Status_Body),
		( Status_Body == [] ->
		    flora_build_struct(HVars,DWS,CODER_BODY_CONTEXT,VarList,HVCode,HVICode,Status_HVars), %_HVPCode should be [],
		    ( Status_HVars == [] ->
			flora_build_struct(BVars,DWS,CODER_BODY_CONTEXT,VarList,BVCode,BVICode,Stat_BV),
			(Stat_BV == [] ->
			    flora_build_struct(DelayChecker,DWS,CODER_BODY_CONTEXT,VarList,DelayCode,DelayCodeInd,Stat_Delay),
			    (Stat_Delay == [] ->
				(Meta == NULL
				-> Status = [], MetaCode = NULL, MetaCodeInd = NULL
				;  coder_build_structlist(Meta,DWS,CODER_GENERIC_CONTEXT,VarList,MetaCode,MetaCodeInd,Status)
				),
				%% _Stat should always be [], so we do not check it:
				%% the defeat cond literal was generated by compiler
				flora_build_struct(DefeatCond,DWS,CODER_BODY_CONTEXT,_,DefeatCode,DefeatCodeInd,_Stat),
				Code1 = FLSYSRULEUPDATE(IdCode,HCode,BCode,HVCode,BVCode,DelayCode,MetaCode,DefeatCode),
				CInd1 = FLSYSRULEUPDATE(IdCodeInd,HICode,BICode,HVICode,BVICode,DelayCodeInd,MetaCodeInd,DefeatCodeInd),
				Code = [Code1],
				CInd = [CInd1]
			    ;
				Status = Stat_Delay,
				Code = [],
				CInd = []
			    )
			;
			    Status = Stat_BV,
			    Code = [],
			    CInd = []
			)
		    ;
			Status = Status_HVars,
			Code = [],
			CInd = []
		    )
		;
		    Status = Status_Body,
		    Code = [],
		    CInd = []
		)
	    ;
		Status = Status_Head,
		Code = [],
		CInd = [] 
	    )
	;
	    Status = Stat_Id,
	    Code = [],
	    CInd = [] 
	).

coder_build_dynrulelist([Term|T],DWS,VarList,Code,CInd,Status) :-
	coder_build_dynrulelist([Term],DWS,VarList,HCode,HCInd,HS),
	( HS == [] ->
	    coder_build_dynrulelist(T,DWS,VarList,TCode,TCInd,Status),
	    append(HCode,TCode,Code),
	    append(HCInd,TCInd,CInd)
	;
	    Status = HS,
	    Code = [],
	    CInd = []
	).

