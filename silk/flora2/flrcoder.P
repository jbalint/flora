coder_write_udf_definition(Name,N,PredName,[]) :-
	flora_write_atom('?- assert(flrregistry:flora_defined_udf_registry(FLORA_THIS_MODULE_NAME,'),
	flora_write_atom(Name),
	flora_write_atom(','),
	write_canonical(N),
	flora_write_atom(',FLORA_THIS_WORKSPACE('),
	flora_write_atom(PredName),
	flora_write_atom('))).'),
	nl.


