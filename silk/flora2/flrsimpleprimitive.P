/*
  This provides a simple way of adding builtin primitives of the form
  primitiveName{...}
*/

:- compiler_options([xpp_on]).

#include "flora_terms.flh"

:- export flora_simple_primitive/4.

flora_simple_primitive(FL_RULEENABLE,2,enable_rule_by_id,flrdescriptor_support).
flora_simple_primitive(FL_RULEDISABLE,2,disable_rule_by_id,flrdescriptor_support).
flora_simple_primitive(FL_ISRULEENABLED,2,is_enabled_rule,flrdescriptor_support).
flora_simple_primitive(FL_ISRULEDISABLED,2,is_disabled_rule,flrdescriptor_support).
flora_simple_primitive(FL_MAKEDEFEASIBLE,2,make_rule_defeasible,flrdescriptor_support).
flora_simple_primitive(FL_MAKESTRICT,2,make_rule_strict,flrdescriptor_support).
flora_simple_primitive(FL_ISDEFEASIBLE,2,is_defeasible_rule,flrdescriptor_support).
flora_simple_primitive(FL_ISSTRICT,2,is_strict_rule,flrdescriptor_support).
