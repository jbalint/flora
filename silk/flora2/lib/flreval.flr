#include "flora_terms.flh"

:- export
	flora_lessthan(?,?),
	flora_greaterthan(?,?),
	flora_lessequal(?,?),
	flora_greaterequal(?,?),
	flora_equal(?,?),
	flora_unequal(?,?).


flora_lessthan(?X,?Y):-
  when((ground(?X)@_prolog(),ground(?Y)@_prolog()),?X<?Y)@_prolog(constraintLib).

flora_greaterthan(?X,?Y):-
  when((ground(?X)@_prolog(),ground(?Y)@_prolog()),?X>?Y)@_prolog(constraintLib).

flora_lessequal(?X,?Y):-
  when((ground(?X)@_prolog(),ground(?Y)@_prolog()),?X=<?Y)@_prolog(constraintLib).

flora_greaterequal(?X,?Y):-
  when((ground(?X)@_prolog(),ground(?Y)@_prolog()),?X>=?Y)@_prolog(constraintLib).

flora_equal(?X,?Y):-
  when((ground(?X)@_prolog(),ground(?Y)@_prolog()),?X=:=?Y)@_prolog(constraintLib).

flora_unequal(?X,?Y):-
  when((ground(?X)@_prolog(),ground(?Y)@_prolog()),?X=\=?Y)@_prolog(constraintLib).
