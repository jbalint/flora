:- compiler_options([xpp_on]).
#include "version.flh"
#include "versionbuild.flh"

:- import flora_configuration/2 from flrregistry.

?- flora_full_name(FloraFullName),
   (flora_configuration(standalone,yes), !
   ;
       assert(package_configuration(version(flora),FloraFullName))
   ), 
   assert(flora_configuration(date,FLORA_DATE)),
   assert(flora_configuration(name,FLORA_NAME)),
   assert(flora_configuration(version,FLORA_VERSION)),
   assert(flora_configuration(build,FLORA_BUILD)).


:- table flora_full_name/1.
flora_full_name(X) :-
	flrporting:flora_concat_atoms([FLORA_VERSION,
				       ' (', FLORA_NAME, ') of ',
				       FLORA_DATE], X).
