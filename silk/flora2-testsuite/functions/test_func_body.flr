function father(?x) := ?y if father(?x,?y).
father(mary,tom).
father(tom,bob).
father(john,sam).
father(sam,alex).

grandfather(?z,?w):-father(father(?z),?w).

%test :- tell(temp)@_plg,
	 grandfather(mary,?y),
	 writeln(?y)@_plg,
	 writeln(father(mary))@_plg,
	 grandfather(john,?x),
	 writeln(?x)@_plg,
	 told@_plg.
