
// Illustrates the use of constraint solver

%p(1.0).
%p(2.0).
%p(3.0).
%p(5.0).

?- [clpr].
%test1 :- {?X>0, ?X<5}, %p(?X), write('1 ')@_plg(), writeln(?X)@_plg(), fail.
%test1 :- true.
%test2 :- {?X>2},%p(?X), write('2 ')@_plg(), writeln(?X)@_plg(), fail.
%test2 :- true.
%test3 :- {?X>0}, %p(?X), {?X<5}, write('3 ')@_plg(), writeln(?X)@_plg(), fail.
%test3 :- true.

%test :- tell(temp)@_plg(),
	%test1, %test2, %test3,
	told@_plg().


