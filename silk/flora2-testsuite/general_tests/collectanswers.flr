%tst1 :- flora_collect_all(${q(?X,?Y)},['?X'=?X,'?Y'=?Y],?True,?Undef,?Exception)@_plg,
	(writeln('tst1: true'=?Exception+?True), writeln('tst1: undf'=?Undef))@_plg.

%tst2 :- flora_collect_all(${q(?X,?Y)},['?X'=?X,'?Y'=?Y],?True,aaaaa,?Exception)@_plg,
	writeln('tst2: true'=?Exception+?True)@_plg.

%tst3 :- flora_collect_all(${q(?X,?Y)},['?X'=?X,'?Y'=?Y],f(?),?Undef,?Exception)@_plg,
	writeln('tst3: undf'=?Exception+?Undef)@_plg.


q(?X,?Y) :- r[?X->?Y].
q(?X,?Y) :- p(?X,?Y).
qq(?X,?Y) :- q(?X,?Y).
qq(?X,?Y) :- qq(?X,?Z),  ?Y is ?Z+1, ?Y< ITERATIONS.

%tst4 :- 
	flora_collect_all(${qq(?X,?Y)},['?X'=?X,'?Y'=?Y],?True,?Undef,?Exception)@_plg,
	length(?True,?LT)@_plg(basics),
	length(?Undef,?LU)@_plg(basics),
	(write('tst4: true answers'=?Exception+?LT), writeln('  undef answers'=?LU))@_plg.

%pretest :- %tst1, %tst2, %tst3, %tst4.

