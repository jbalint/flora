hand::body_part.
hand[pairedness*->paired].
// second phrase required to avoid infinite descent.
?X(right)[side*->right]::?X :-
	?X::body_part[pairedness*->paired],
	not ?X[side*->?_].
// second phrase required to avoid infinite descent.
?X(left)[side*->left]::?X :-
	?X::body_part[pairedness*->paired],
	not ?X[side*->?_].

?- writeln('\n Kinds of hands') @ _plg.

%pretest :- ?HP::hand,
	    numbervars(?HP)@_plg(num_vars),
	    flora_write_oid(?HP)@_plg(flrdecode), nl@_plg(), fail.
%pretest :- true.

%test :- tell(temp)@_plg(),
	Method[%mustDefine(on)]@_sys,
	%pretest,
	Method[%mustDefine(off)]@_sys,
	!,
	abolish_all_tables,
	%pretest,
	told@_plg().
