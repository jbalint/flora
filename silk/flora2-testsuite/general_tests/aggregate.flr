/* This demo shows the use of aggregates and insert/delete commands.
*/


john[salary(1990) -> 20].
john[salary(1991) -> 40].
john[salary(1992) -> 60].
john[salary(1993) -> 70].
john[salary(1994) -> 70].
john[salary(1995) -> 80].
john[salary(1996) -> 70].
john[salary(1997) -> 50].
john[salary(1998) -> 80].

mary[salary(1990) -> 40].
mary[salary(1991) -> 30].
mary[salary(1992) -> 60].
mary[salary(1993) -> 70].
mary[salary(1994) -> 60].
mary[salary(1995) -> 60].
mary[salary(1996) -> 70].
mary[salary(1997) -> 80].
mary[salary(1998) -> unknown].

%tst1 :- ?Z = max {?X| john[salary(?_Year)->?X] },
	(write('tst1: '), writeln(?Z))@_plg().

%tst2 :- ?Z = max{?X|john[salary(?Year) ->?X], ?Year < 1996},
	(write('tst2: '), writeln(?Z))@_plg().

%tst3 :- ?Z=count{?Year|john.salary(?Year) <
    	    	    	max{?X|john[salary(?Y2)->?X],?Y2<?Year}},
	(write('tst3: '), writeln(?Z))@_plg().

%tst4 :- ?Z=count{?Year| ?X=john.salary(?Year),?Y=mary.salary(?Year),
	              (number(?X), number(?Y))@_plg(), ?X < ?Y},
	(write('tst4: '), writeln(?Z))@_plg().

%tst5 :- ?Z= avg{?X[?Who]| ?Who[salary(?_Year)->?X]},
	(write('tst5: '), writeln(?Z))@_plg(), fail.
%tst5 :- true.

%tst6 :- ?Z= collectset{?Year[?Who]| ?Who[salary(?Year) -> ?X],
	                          number(?X)@_plg(), ?X < 60},
	(%write('tst6: '), %writeln(?Z))@_io, fail.
%tst6 :- true.

%tst7 :- delete{mary[salary(?Y)->unknown]},
	(write('tst7: '), writeln(?Y))@_plg().
%tst7 :- true.

/* %tst8, %tst9 now work, after clause delay has been implemented  */
%tst8 :- <>tdelete{john[salary(?Y)->?S1], mary[salary(?Y)->?S2]| ?S1<?S2},
	(write('tst8: '), writeln(?Y))@_plg().

%tst9 :- <>tdelete{john[salary(?Y)->?S1] | mary[salary(?Y)->?S2], ?S1<?S2},
	(write('tst9: '), writeln(?Y))@_plg().

%pretest :-
	%tst1, %tst2, %tst3, %tst4, %tst5, %tst6, %tst7,
	%tst8, %tst9.

%test :- tell(temp)@_plg(),
	Method[%mustDefine(on)]@_sys,
	%pretest,
	Method[%mustDefine(off)]@_sys,
	%pretest,
	told@_plg().




